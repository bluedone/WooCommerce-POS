<div class="numpad numpad-{{numpad}}">
  <div class="numpad-header">
    <strong class="title">{{label}}</strong>

    {{#if input}}
      <div class="input-group {{#if input.toggle}}input-toggle{{/if}}">
        {{#if input.left}}
          {{#if input.left.addOn}}<span class="input-group-addon">{{{input.left.addOn}}}</span>{{/if}}
          {{#if input.left.btn}}<span class="input-group-btn"><a href="#" data-btn="left">{{{input.left.btn}}}</a></span>{{/if}}
        {{/if}}
        <input type="text" name="value" class="form-control autogrow" readonly="readonly">
        {{#if input.right}}
          {{#if input.right.btn}}<span class="input-group-btn"><a href="#" data-btn="right">{{{input.right.btn}}}</a></span>{{/if}}
          {{#if input.right.addOn}}<span class="input-group-addon">{{{input.right.addOn}}}</span>{{/if}}
        {{/if}}
      </div>
    {{/if}}

  </div>

  <div class="numpad-keys">
    <div class="keys common">
      <div class="row">
        <a href="#" data-key="1" class="btn">1</a>
        <a href="#" data-key="2" class="btn">2</a>
        <a href="#" data-key="3" class="btn">3</a>
      </div>
      <div class="row">
        <a href="#" data-key="4" class="btn">4</a>
        <a href="#" data-key="5" class="btn">5</a>
        <a href="#" data-key="6" class="btn">6</a>
      </div>
      <div class="row">
        <a href="#" data-key="7" class="btn">7</a>
        <a href="#" data-key="8" class="btn">8</a>
        <a href="#" data-key="9" class="btn">9</a>
      </div>
      <div class="row">
        <a href="#" data-key="0" class="btn">0</a>
        <a href="#" data-key="00" class="btn">00</a>
        <a href="#" data-key="." class="btn decimal">{{{decimal}}}</a>
      </div>
    </div>
    <div class="keys common extra-keys">
      <a href="#" data-key="del" class="btn"><i class="icon icon-delete"><span>del</span></i></a>
      <a href="#" data-key="+/-" class="btn">+/-</a>
      <a href="#" data-key="ret" class="btn return">{{return}}</a>
    </div>

    {{#if keys}}
      <div class="keys extra-keys {{numpad}}">
        {{#each keys}}
          <a href="#" data-key="{{this}}" class="btn">{{this}}</a>
        {{/each}}
      </div>
    {{/if}}

  </div>
</div>