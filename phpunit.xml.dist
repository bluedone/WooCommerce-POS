<phpunit
  bootstrap="tests/unit/php/bootstrap.php"
  backupGlobals="false"
  colors="true"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  verbose="true"
  >
  <testsuites>
    <testsuite name="WooCommerce POS Unit Tests">
      <directory prefix="test-" suffix=".php">./tests/unit/php/spec/</directory>
    </testsuite>
    <testsuite name="WooCommerce POS Integration Tests">
      <directory prefix="test-" suffix=".php">./tests/integration/php/spec/</directory>
    </testsuite>
  </testsuites>
  <filter>
    <blacklist>
      <directory suffix=".php">./tests/</directory>
      <directory suffix=".php">./vendor/</directory>
    </blacklist>
  </filter>
  <logging>
      <log type="coverage-clover" target="./tmp/clover.xml" charset="UTF-8" />
  </logging>
</phpunit>